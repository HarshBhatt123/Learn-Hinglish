<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button1"
            android:onClick="click"
            android:tag="doyouspeakenglish"
            android:text="THANK YOU"
            android:textColor="#000000"
            app:backgroundTint="#F44336"
            app:iconTint="#000000"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:onClick="click"
            android:tag="hello"
            android:text="HELLO"
            android:textColor="#000000"
            app:backgroundTint="#4CAF50"
            app:iconTint="#000000"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:onClick="click"
            android:tag="goodevening"
            android:text="I LIKE IT"
            android:textColor="#000000"
            app:backgroundTint="#68B5F3"
            app:iconTint="#000000"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:onClick="click"
            android:tag="howareyou"
            android:text="GOODBYE"
            android:textColor="#000000"
            app:backgroundTint="#DC9292"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:onClick="click"
            android:tag="mynameis"
            android:text="MY NAME IS"
            android:textColor="#000000"
            app:backgroundTint="#FFEB3B"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:onClick="click"
            android:tag="please"
            android:text="PLEASE"
            android:textColor="#000000"
            app:backgroundTint="#B4F16E"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:onClick="click"
            android:tag="welcome"
            android:text="WELCOME"
            android:textColor="#000000"
            app:backgroundTint="#58CDDD"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:onClick="click"
            android:tag="ilivein"
            android:text="HOW ARE \nYOU DOING?"
            android:textColor="#000000"
            app:backgroundTint="#9F66FB"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>